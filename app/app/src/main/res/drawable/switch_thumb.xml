<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/white_isabelline"/>
            <size
                android:width="35dp"
                android:height="35dp"/>
            <stroke
                android:color="@color/sunset_orange"
                android:width="3.5dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/white_isabelline"/>
            <size
                android:width="35dp"
                android:height="35dp"/>
            <stroke
                android:color="@color/light_sea_green"
                android:width="3.5dp"/>
        </shape>
    </item>
</selector>